<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chooser_view_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/te1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/hello_world" />

    <fragment
        android:id="@+id/activity_main_fragment_a"
        android:name="com.androidedu.kodluyoruzakademi.activityfragmentlifecycle.FragmentA"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/hello_blank_fragment_a" />

    <fragment
        android:id="@+id/activity_main_fragment_b"
        android:name="com.androidedu.kodluyoruzakademi.activityfragmentlifecycle.FragmentB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/hello_blank_fragment_b" />

</LinearLayout>
